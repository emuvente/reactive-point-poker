.where
	margin 0 0.5rem 0.5rem

	span
		vertical-align middle

	span:nth-child(even)
		color #ccc

	span:nth-child(odd)
		font-weight bold
		color #888
		margin 0 0.2rem

	.roles
		display inline-block
		vertical-align middle
		margin 0 0.5rem

		.role
			margin 0.1rem 0.25rem

.lobby .where
	div:first-of-type, span:first-of-type, .roles
		display none
